{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/build/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/index.js"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "server/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/build/index.html"
        }
    ],
    "buildCommand": "npm install --prefix server && npm install --prefix client && npm run build --prefix client"
}